<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
      <style type="text/css">
          .style1 {
              width: 105px;
          }

          .style2 {
              width: 290px;
          }

          .style3 {
              width: 224px;
          }
      </style>
  </head>
  <body>
    <h1>List of Receipes</h1>
      <table frame="border" style="width: 44%;">
          <tr>
              <th class="style3">Id</th>
              <th class="style2">Desc</th>
              <th class="style1">Ingrediants</th>
          </tr>
          {{#list}}
          <tr>
              <td class="style3">{{ id }}</td>
              <td class="style2">{{ desc }}</td>
              <td class="style1">&nbsp; </td>
          </tr>
          {{/list}}
      </table>
  </body>
</html>
